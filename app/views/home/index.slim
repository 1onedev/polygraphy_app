      .d-flex.flex-column
        - if slider.video.present? 
          .video-bg-block.d-flex.align-items-center.justify-content-center
            = video_tag slider.video, autoplay: :autoplay, loop: :loop, muted: :muted, playsinline: true, class: 'bg-image', id: 'video_home'
