                      .add-animate.slide-animate data-animated="fadeIn" 
                        = link_to slider.button_url, class: 'btn btn-lg btn-round btn-primary btn-gray-shadow mx-2 ml-lg-0' 
                          = slider.button_title
        - else
          .page-header-block-height.d-flex.align-items-center.bg-image data-img-src="#{image_path slider.image.url(:index)}" 
            .container
              .row
                .col-lg-8.col-xl-6.text-center.text-lg-left.py-5
                  .px-md-5.pr-xl-0.py-5
                    h2.h3.font-weight-300.text-white.add-animate.slide-animate data-animated="fadeInLeft"  = slider.text
                    h1.display-4.font-weight-800.text-white.mb-3.add-animate.slide-animate data-animated="fadeInRight" 
