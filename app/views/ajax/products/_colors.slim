- colors.each do |color|
  .form-check.custom-control.custom-radio.mt-2.mb-0.my-md-2
    = radio_button_tag :select_color_id, color.id, false, class: 'custom-control-input select_color_id'
    = label_tag "select_color_id_#{color.id}", color.name_with_size, class: 'custom-control-label text-white-75'
