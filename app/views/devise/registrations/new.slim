doctype html
html lang="uk" 
  head
    meta charset="UTF-8"
    meta content="IE=edge" http-equiv="X-UA-Compatible" 
    meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport"

    title = (t 'devise.seo.registration_title')
    meta name="description" content="#{t 'devise.seo.description'}"
    meta name="image" content="/favicon/ou.jpg"
    meta property="og:title" content="#{t 'devise.seo.registration_title'}"
    meta property="og:description" content="#{t 'devise.seo.description'}"
    meta property="og:image" content="/favicon/ou.jpg"
    meta property="twitter:title" content="#{t 'devise.seo.registration_title'}"
    meta property="twitter:description" content="#{t 'devise.seo.description'}"
    meta property="twitter:image" content="/favicon/ou.jpg"
    meta property="twitter:card" content="summary_large_image"
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'

    link rel="icon" sizes="32x32" type="image/png" href='/favicon/favicon-32x32.png' 
    link rel="icon" sizes="16x16" type="image/png" href='/favicon/favicon-16x16.png'
    link rel="icon" sizes="192x192" type="image/png" href='/favicon/android-chrome-192x192.png'
    link rel="icon" sizes="512x512" type="image/png" href='/favicon/android-chrome-512x512.png'
    link rel="apple-touch-icon" sizes="180x180" href='/favicon/apple-touch-icon.png'
    link rel="icon" href="/favicon/favicon.ico"

  body
    = render 'layouts/alert'
    .container-fluid
      .row.min-vh-100
        .col-lg-4.bg-image.order-2.order-lg-1 data-img-src="#{image_path 'sign-in-page-bg-02.jpg'}" 
          .row.h-100.align-content-between
            .col-12.d-none.d-lg-block
              .px-3.py-4.p-xl-4
                = link_to root_path(params[:locale])
                  = image_tag 'logo-white.svg', data: {:height => '42px', :width => '146px'}, alt: 'Polygraphy App'
            .col-12.pt-5.mt-4.pt-lg-0.mt-lg-0
              .px-3.px-xl-4
                blockquote.blockquote-2.blockquote-light-2.border-left.mb-5.mb-lg-0
                  p.mb-0 = (t 'devise.qoute.text_2')
                  footer.blockquote-footer = (t 'devise.qoute.name_2')
            .col-12.pt-lg-3
              .text-white-75.px-3.py-4.p-xl-4.mt-lg-1
                small
                  | created by
                  a.ml-1 href='https://1onedev.com' target='_blank' 1ONEDEV
        .col-lg-8.order-1.order-lg-2
          .row.h-100.align-content-between
            .col-12
              .row.align-items-center.py-4.mb-4.mb-lg-0
                .col-6.d-lg-none
                  .px-3
                    = link_to root_path(params[:locale])
                      = image_tag 'logo-dark.svg', data: {:height => '42px', :width => '146px'}, alt: 'Polygraphy App'
                .col-6.col-lg-12
                  .text-right.px-3.px-xl-4.mt-xl-2
                    = link_to :back, class: 'text-dark font-weight-600 text-uppercase'
                      i.fas.fa-angle-left.mr-2
                      = (t 'devise.back')
            .col-12
              .container
                .row.mb-5
                  .col-md-8.offset-md-2.col-xl-6.offset-xl-3
                    .p-lg-4.mb-4.mb-xl-5
                      .mb-4.text-center
                        = image_tag 'register-03.svg', data: {:height => '64px', :width => '64px'}, alt: 'Polygraphy App'
                      .pb-1
                      h3.section-title-4.text-center.font-weight-800.mb-4
                        = (t 'devise.registrations.sign_up')
                        .title-divider-round
                      = form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
                        = devise_error_messages! 
                        .input-group.input-group-lg.input-group-round.mb-4
                          label.text-uppercase.px-3 = (t 'devise.registrations.name')
                          .input-group-inner
                            .input-group-prepend
                              span.input-group-text.input-group-icon
                                 i.fas.fa-user-circle
                            = f.text_field :name, class: 'form-control form-control-lg', required: 'required', placeholder: "#{t 'devise.registrations.name'}"
                            .input-focus-bg
                        .input-group.input-group-lg.input-group-round.mb-4
                          label.text-uppercase.px-3 = (t 'devise.registrations.company_type')
                          .input-group-inner
                            .input-group-prepend
                              span.input-group-text.input-group-icon
                                i.fas.fa-check
                            = f.select :user_group, User.user_groups.map {|k, v| [t("enums.#{k}"), k]}, { include_blank: "#{t 'devise.registrations.company_type'}" }, { class: 'custom-select custom-select-lg', required: :required }
                            .input-focus-bg
                        .input-group.input-group-lg.input-group-round.mb-4
                          label.text-uppercase.px-3 = (t 'devise.sessions.email')
                          .input-group-inner
                            .input-group-prepend
                              span.input-group-text.input-group-icon
                                i.far.fa-envelope
                            = f.email_field :email, class: 'form-control form-control-lg', placeholder: "#{t 'devise.sessions.email'}", required: 'required'
                            .input-focus-bg
                        .input-group.input-group-lg.input-group-round.mb-4
                          label.text-uppercase.px-3 = (t 'devise.sessions.password')
                          .input-group-inner
                            .input-group-prepend
                              span.input-group-text.input-group-icon
                                i.far.fa-eye-slash
                            = f.password_field :password, class: 'form-control form-control-lg', placeholder: "#{t 'devise.sessions.password'}", required: 'required'
                            .input-focus-bg
                        .input-group.input-group-lg.input-group-round.mb-4
                          label.text-uppercase.px-3 = (t 'devise.registrations.password_again')
                          .input-group-inner
                            .input-group-prepend
                              span.input-group-text.input-group-icon
                                i.far.fa-eye-slash
                            = f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: "#{t 'devise.registrations.password_again'}", required: 'required'
                            .input-focus-bg
                        div data-height="12px"
                        = f.button class: 'btn btn-lg btn-round btn-primary btn-block'
                          = (t 'devise.registrations.sign_up_2')
                        label.w-100.text-center.py-2.mb-0
                          = (t 'devise.has_account')
                          =< link_to new_user_session_path
                            = (t 'devise.sessions.sign_in')


    = javascript_include_tag 'application'

    = yield :js
